<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="net.mm2d.dmsexplorer.model.CdsItemModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_item"
        android:orientation="horizontal"
        android:translationZ="@{model.translationZ}"
        >

        <View
            android:id="@+id/mark"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/markListItemSelected"
            android:visibility="@{model.markVisibility}"
            />

        <TextView
            android:id="@+id/textAccent"
            android:layout_width="@dimen/accent_size"
            android:layout_height="@dimen/accent_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:background="@{model.accentBackground}"
            android:gravity="center"
            android:text="@{model.accentText}"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/text_size_accent"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:text="@{model.title}"
                android:textColor="@color/textMain"
                android:textSize="@dimen/text_size_main"
                />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@{model.description}"
                android:textColor="@color/textWeak"
                android:textSize="@dimen/text_size_sub"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@{model.imageResource}"/>

    </LinearLayout>
</layout>
